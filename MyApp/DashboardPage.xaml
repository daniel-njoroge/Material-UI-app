<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyApp.DashboardPage"
             Title="DashboardPage">

    
    <Grid Padding="20" ColumnDefinitions="250, *" RowDefinitions="*,*,*">

        
        <Grid Grid.Column="0" Grid.Row="0">
            <Button x:Name="apartmentsbtn"
                    Text="Apartments"
                    WidthRequest="250"
                    HorizontalOptions="Start"
                    VerticalOptions="Center"
                    Clicked="OnApartmentsClicked"/>
        </Grid>

        <Grid Grid.Column="0" Grid.Row="1">
            <Button x:Name="tenantsbtn"
                    Text="Tenants"
                    WidthRequest="250"
                    HorizontalOptions="Start"
                    VerticalOptions="Center"
                    Clicked="OnTenantsClicked"/>
        </Grid>

        <Grid Grid.Column="0" Grid.Row="2">
            <Button x:Name="settingsbtn"
                    Text="Settings"
                    WidthRequest="250"
                    HorizontalOptions="Start"
                    VerticalOptions="Center"
                    Clicked="OnSettingsClicked"/>
        </Grid>

        
        <ContentView x:Name="contentPanel"
                     Grid.Column="1"
                     Grid.RowSpan="3"
                     BackgroundColor="LightGray"/>

    </Grid>
</ContentPage>
